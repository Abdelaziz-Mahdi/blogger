<div class="card mt-3 ms-3 me-3">
  <div class="card-body">
    <div class='d-flex justify-content-between'>
      <h5 class="card-title"><%= post.title %> #<%= i %></h5>
      <% if post.author_id == current_user.id || can?(:destroy, current_user) %>
        <%= button_to "Delete", user_post_path(post.author_id, post.id), method: :delete, class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
    <%= link_to user_post_path(params[:id].to_i, post.id) do %>
      <p class="card-text"><%= post.text[0,100]+" ..." %></p>
      <p class="card-text text-end">
        <small class="text-body-secondary">
          Comments: <%= post.comments_counter %>,
          Likes: <%= post.likes_counter %>
        </small>
      </p>
    <% end %>
  </div>
</div>
